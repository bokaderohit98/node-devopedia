          <div class="card">
            <div class="card-body">
              <img class="card-img-top" src="{{img}}">
            </div>
            <div class="card-content">
              <h4 class="card-title">{{title}}</h4>
            </div>
            <div class="card-footer">
              <a href="/course/content/{{_id}}" class="btn-round pull-right" rel="tooltip" data-placement="left" data-original-title="See introductory video, price, author and everything else about the course"><i class="material-icons">arrow_forward</i></a>
            </div>
          </div>
        </div>
      {{/each}}
    {{/if}}
  </div>

  {{!-- All available courses --}}
  <div class="container-fluid">
    {{#if courses}}
      <h4 class="title">All Courses</h4>
      {{#each courses}}
        <div class="col-md-4" style="margin-bottom: 2em;">
          <div class="card">
            <div class="card-body">
              <img class="card-img-top" src="{{img}}">
            </div>
            <div class="card-content">
              <span class="badge">{{price}}</span>
              <h4 class="card-title">{{title}}</h4>
            </div>
            <div class="card-footer">
              <a href="/course/content/{{_id}}" class="btn-round pull-right" rel="tooltip" data-placement="left" data-original-title="See introductory video, price, author and everything else about the course"><i class="material-icons">arrow_forward</i></a>
            </div>
          </div>
        </div>
      {{/each}}
    {{/if}}
  </div>
{{/if}}


{{!-- FOR MENTORS --}}
{{#if user.isMentor}}

  {{!-- Approved courses --}}
  <div class="container-fluid">
    {{#if approvedCourses}}
      <h4 class="title">My Courses: Approved</h4>
      {{#each approvedCourses}}
        <div class="col-md-4" style="margin-bottom: 3em;">
          <div class="card">
            <div class="card-body">
              <img class="card-img-top" src="{{img}}">
            </div>
            <div class="card-content">
              <span class="badge">{{price}}</span>

              <h4 class="title">{{title}}</h4>
            </div>
            <div class="card-footer">
              <a href="/course/content/{{_id}}" class="btn-round pull-right" rel="tooltip" data-placement="left" data-original-title="See introductory video, price, author and everything else about the course"><i class="material-icons">arrow_forward</i></a>
              <a href="/mentor/edit-request/{{_id}}" class="btn-round pull-right" rel="tooltip" data-placement="top" data-original-title="Ask for edit permission."><i class="material-icons text-info">create</i></a>
            </div>
          </div>
        </div>
      {{/each}}
    {{/if}}
  </div>

  {{!-- Unapproved Courses --}}
  <div class="container-fluid">
    {{#if unapprovedCourses}}
      <h4 class="title">My Courses: Un-approved</h4>
      {{#each unapprovedCourses}}
        <div class="col-md-4" style="margin-bottom: 3em;">
          <div class="card">
            <div class="card-body">
              <img class="card-img-top" src="{{img}}">
            </div>
            <div class="card-content">
              <span class="badge">{{price}}</span>
              <h4 class="title">{{title}}</h4>
            </div>
            <div class="card-footer">
              <a href="/course/content/{{_id}}" class="btn-round pull-right" rel="tooltip" data-placement="left" data-original-title="See introductory video, price, author and everything else about the course"><i class="material-icons">arrow_forward</i></a>
              <a href="/course/edit/{{_id}}" class="btn-round pull-right" rel="tooltip" data-placement="top" data-original-title="Edit Course"><i class="material-icons text-info">create</i></a>
            </div>
          </div>
        </div>
      {{/each}}
    {{/if}}
  </div>

  {{!-- All Courses --}}
  <div class="container-fluid">
    {{#if courses}}
      <h4 class="title">All Courses</h4>
      {{#each courses}}
        <div class="col-md-4" style="margin-bottom: 3em;">
          <div class="card">
            <div class="card-body">
              <img class="card-img-top" src="{{img}}">
            </div>
            <div class="card-content">
              <span class="badge">{{price}}</span>
              <h4 class="title">{{title}}</h4>
            </div>
            <div class="card-footer">
              <a href="/course/content/{{_id}}" class="btn-round pull-right" rel="tooltip" data-placement="left" data-original-title="See introductory video, price, author and everything else about the course"><i class="material-icons">arrow_forward</i></a>
            </div>
          </div>
        </div>
      {{/each}}
    {{/if}}
  </div>
{{/if}}

{{!-- NO RESULTS --}}
{{#if courses}}
{{else}}
  {{#if approvedCourses}}
  {{else}}
    {{#if unapprovedCourses}}
    {{else}}
      {{#if myCourses}}
      {{else}}
        {{#if students}}
        {{else}}
          {{#if mentors}}
          {{else}}
            {{> _empty}}
          {{/if}}
        {{/if}}
      {{/if}}
    {{/if}}
  {{/if}}
{{/if}}
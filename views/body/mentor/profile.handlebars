<div class="row">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header" data-background-color="purple">
        <h4 class="title">Edit Profile</h4>
        <p class="category">Complete your profile</p>
      </div>
      <div class="card-content">
        <form action="/mentor/profile" method="post">
          <div class="row">
            <div class="col-md-6">
              <div class="form-group label-floating">
                <label class="control-label">Email</label>
                <input type="text" class="form-control" disabled value= {{user.email}} name="email">
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group label-floating">
                <label class="control-label">Name</label>
                <input type="text" class="form-control" value= {{user.name}} name="name">
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group label-floating">
                <label class="control-label">Profile Pic</label>
                <input type="text" class="form-control" name="img" value= {{user.img}}>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group label-floating">
                <label class="control-label">Tell us about yourself</label>
                <textarea name="info" class="form-control" rows="8" style="width: 100%;">{{user.info}}</textarea>
              </div>
            </div>
          </div>
          <button type="submit" class="btn btn-primary pull-right">Update Profile</button>
          <div class="clearfix"></div>
        </form>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card card-profile">
      <div class="card-avatar">
        <a href="#">
          <img class="img" src="{{user.img}}"/>
        </a>
      </div>
      <div class="content">
        <h4 class="card-title">{{user.name}}</h4>
        <p class="card-content">
          {{user.info}}
        </p>
      </div>
    </div>
  </div>
</div>